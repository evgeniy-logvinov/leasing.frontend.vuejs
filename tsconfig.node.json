{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "paths": {
    "~/*": ["src/*"],
    "@/*": ["./src/*"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "module": "ESNext",
    "types": ["node"],
    "moduleResolution":"node",
  }
}
