{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "paths": {
    "~/*": ["src/*"],
    "@/*": ["./src/*"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "module": "ESNext",
    "types": ["node"],
    "moduleResolution":"node",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["./src/*"]
    }
  }
}
